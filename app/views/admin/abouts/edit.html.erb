<%= render "layouts/title"%>
<div class="container-fluid" style="padding-top:1%">
  <div class="row-fluid">
    <div class="span2" style="padding-top:2%">
      <!--Sidebar content-->
      <%= render "layouts/left"%>
    </div>
    <div class="span6">
      <h4>更新活动信息</h4>
      <div>
        <%= form_for [:admin, @about],:url => { :controller => '/admin/abouts', :action => 'update', :id => @about },:html => { :multipart => true } do |f| %>
          <%= f.kindeditor :content%>
          <%= f.submit "更新", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

