<div id="wrapper" class="clearfix">
  
  <div id="header">
    
    <div class="container">
      
      <h1 id="title">
        <%= link_to "Focus Business", root_path%>
      </h1>
      
    </div> <!-- /container -->
    
  </div> <!-- /header --> 
  
  
  <div id="nav" class="clearfix">
    
    <div class="container">
    
      <ul id="main-nav">
        <li >
          <%= link_to "最新活动", dongs_path%>
        <li>
          <%= link_to "奖学金申请", fellowships_path%>
        </li>
        
        <li >
          <%= link_to "美国高中联盟", hschools_path%>
        </li>
        
        <li class="active">
          <%= link_to "家长联盟", new_meng_path%>
        </li>       
        
      </ul>
      
    </div> <!-- /container -->
    
  </div> <!-- /nav -->
  
  
  <div id="page-title">
    
    <h1>家长联盟</h1>
  </div> <!-- /page-title -->
  <div id="content">
    
    <div class="container">
      
      <div class="row">
        
        <div class="grid-12">
          
          <div class="pricing-plans plans-4">
            
            <div class="plan-container">
              <%= form_for @meng do |m| %>
                <%= m.label :name, "姓名" %>
                <%= m.text_field :name %>
                <%= m.label :phone, "电话" %>
                <%= m.text_field :phone  %>
                <%= m.label :qq, "QQ"%>
                <%= m.text_field :qq %>
                <%= m.label :email, "电子邮件"%>
                <%= m.text_field :email %>
                <%= m.label :company, "就职公司"%>
                <%= m.text_field :company %>
                <%= m.label :zhi, "职位"%>
                <%= m.text_field :zhi %>
                <%= m.label :li, "加入理由"%>
                <%= m.text_field :li %>
                <p>
                  <%= m.submit "提交", class: "btn btn-warning" %>
                </p>
              <% end %>              
            </div> <!-- /plan-container -->
              
          </div> <!-- /pricing-plans -->
          
        </div> <!-- /grid-12 -->
        
      </div> <!-- /row -->
      
    </div> <!-- /container -->
    
  </div> <!-- /content -->
  
  
  
  <div id="footer">
    <%= render "layouts/footer"%>    
  </div> <!-- /footer -->
  
  <div id="copyright">
    
    <div class="container">
      
      <div class="row">
      
        <div id="rights" class="grid-6">
        © 2013 Propel UI. All Rights Reserved.
        </div> <!-- /grid-6 -->
        
        <div id="totop" class="grid-2">
          <%= link_to "关于我们", abouts_path %>
        </div> <!-- /grid-6 -->
        <div id="totop" class="grid-2">
          <%= link_to "联系我们", contacts_path %>
        </div> <!-- /grid-6 -->
        <div id="totop" class="grid-2">
          <%= link_to "加入我们", joins_path %>
        </div> <!-- /grid-6 -->
        
      </div> <!-- /row -->
      
    </div> <!-- /container -->
      
  </div> <!-- /copyright -->
  
</div> <!-- /wrapper -->

